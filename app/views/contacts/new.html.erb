<h1>Contact us</h1>

<%= form_for :contact, url: contacts_path do |f| %>
	<p>
		<div><%= f.label :email %></div> <br/> 
		<div><%= f.text_field :email %></div>
	</p>
	<p>
		<div><%= f.label :message %></div> <br/> 
		<div><%= f.text_area :message %></div>
	</p>
	<p>
		<%= f.submit 'Send message' %>
	</p>
<% end %>