<h1>Edit article: <%= @article.id %></h1>

<%= form_for :article, url: article_path(@article), method: :put do |f| %>
	<div class="form-group">
		<%= f.label :title %> 
		<%= f.text_field :title, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :text %> 
		<%= f.text_area :text, class: "form-control", rows: "6" %>
	</div>
	<p><%= f.submit 'Save', class: "btn btn-primary" %></p>
<% end %>